---
import { useStoryblokApi } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import Layout from '../layouts/Layout.astro'

const storyblokApi = useStoryblokApi()
const { data } = await storyblokApi.get('cdn/stories/settings', {
  version: 'published',
})

const story = data.story
---

<Layout title="Configuración del Sistema">
  <div class=" w-full">
    <header class="mb-10 border-b border-slate-700 pb-6">
      <h1 class="text-4xl font-black text-white tracking-tight">Ajustes de Cuenta</h1>
      <p class="text-slate-400 mt-2">Gestiona la configuración global de tu perfil administrativo.</p>
    </header>

    <div class="flex flex-col bg-slate-800 rounded-2xl p-2 border border-slate-700">
      <StoryblokComponent blok={story.content} />
    </div>
  </div>
</Layout>