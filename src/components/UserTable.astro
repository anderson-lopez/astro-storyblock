---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import type { UserTableBlok } from '../types/storyblok'

interface Props {
  blok: UserTableBlok;
}

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} class="col-span-full bg-slate-800 rounded-xl border border-slate-700 overflow-hidden shadow-2xl">
  <div class="p-6 border-b border-slate-700 bg-slate-800/50 text-blue-400 font-bold uppercase tracking-widest text-sm">
    {blok.title}
  </div>
  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead class="bg-slate-900/50 text-slate-400 text-xs uppercase tracking-widest font-semibold">
        <tr>
          <th class="px-6 py-4 text-blue-400">Nombre Completo</th>
          <th class="px-6 py-4">Correo Electr√≥nico</th>
          <th class="px-6 py-4">Rol Asignado</th>
          <th class="px-6 py-4 text-center text-blue-400">Estado</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-700/50">
        {blok.rows?.map((row) => (
          <StoryblokComponent blok={row} />
        ))}
      </tbody>
    </table>
  </div>
</div>