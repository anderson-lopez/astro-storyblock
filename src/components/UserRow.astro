---
import { storyblokEditable } from '@storyblok/astro'
import type { UserRowBlok } from '../types/storyblok'

interface Props {
  blok: UserRowBlok;
}

const { blok } = Astro.props
---

<tr {...storyblokEditable(blok)} class="hover:bg-slate-700/20 transition-colors group">
  <td class="px-6 py-4 font-medium text-slate-200 group-hover:text-white">{blok.name}</td>
  <td class="px-6 py-4 text-slate-400 font-mono text-sm">{blok.email}</td>
  <td class="px-6 py-4 text-slate-300 italic">{blok.role}</td>
  <td class="px-6 py-4 text-center">
    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
      blok.status === 'Activo' 
      ? 'bg-green-900/30 text-green-400 border border-green-800' 
      : 'bg-red-900/30 text-red-400 border border-red-800'
    }`}>
      {blok.status}
    </span>
  </td>
</tr>