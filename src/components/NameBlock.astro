---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} style="padding: 2rem; background: #23262d; color: white; border-radius: 8px; margin: 1rem 0;">
  <p style="font-size: 0.8rem; color: #888; margin-bottom: 0.5rem;">Bloque de Storyblok:</p>
  <h1 style="font-size: 2.5rem; margin: 0;">
    {blok.user_name}
  </h1>
</div>